<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.ui.createuser.CreateUserFragment">

    <LinearLayout
        android:id="@+id/login_container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="First Name"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/nameInput"
            android:hint="Enter First Name"
            android:inputType="textPersonName"
            android:background="@drawable/field_background_rectangle"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Job"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/jobInput"
            android:inputType="textPassword"
            android:hint="Enter Job"
            android:background="@drawable/field_background_rectangle"
            android:text="" />

        <Button
            android:id="@+id/createUserBtn"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:backgroundTint="@color/primary"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Create"/>

    </LinearLayout>

</RelativeLayout>